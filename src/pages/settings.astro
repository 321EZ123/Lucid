---
import BaseLayout from '../layouts/BaseLayout.astro'

---

<BaseLayout title="Lucid | Settings">
  <div class="hero min-h-screen bg-base-200">
    <div class="hero-content text-center">
        <div class="max-w-md">
            <h1 class="text-5xl font-bold  hover__btn nodeHover">Settings</h1>
            <p class="py-6 hover__btn nodeHover">This is the page where you can toggle on and off various optional features and quality of life improvements for Lucid.</p>
            <div class="divider">Backend Select</div>
            <br>
            <h1>Coming Soon</h1>
            <br>
            <div class="divider">URL Handling</div>
            <div class="form-control">
                <label class="label cursor-pointer">
                  <span class="label-text">About : Blank Cloaking</span> 
                  <input id="aboutBlankCloaking"type="checkbox" class="toggle" unchecked onclick="aboutBlankCloaking();">
                </label>
            </div>
            <div class="divider">Tab Cloaking</div>
            <div class="flex flex-col space-y-4 ...">
                <div class="form-control">
                    <div class="input-group">
                        <input id="titleTab" type="text" placeholder="Tab Title" class="input w-full max-w-lg">
                        <button id="tabTitle" class="btn btn-square">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                            </svg>
                    </button>
                    </div>

                </div>
                <div class="form-control">
                    <div class="input-group">
                        <input id="iconTab" type="text" placeholder="Tab Icon" class="input w-full max-w-lg">
                        <button id="tabIcon" class=" btn btn-square ">
                            <svg xmlns="http://www.w3.org/2000/svg " class="h-6 w-6 " fill="none " viewBox="0 0 24 24 " stroke="currentColor " stroke-width="2 ">
                                <path stroke-linecap="round " stroke-linejoin="round " d="M5 13l4 4L19 7 " />
                            </svg>
                    </button>
                    </div>
                </div>
                <div class="divider">Panic</div>
            <div class="flex flex-col space-y-4 ...">
                <div class="form-control">
                    <div class="input-group">
                        <input id="titleTab" type="text" placeholder="Panic URL" class="input w-full max-w-lg">
                        <button id="tabTitle" class="btn btn-square">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                            </svg>
                    </button>
                    </div>

                </div>
                <div class="form-control">
                    <div class="input-group">
                        <input id="iconTab" type="text" placeholder="Panic Key" class="input w-full max-w-lg">
                        <button id="tabIcon" class=" btn btn-square ">
                            <svg xmlns="http://www.w3.org/2000/svg " class="h-6 w-6 " fill="none " viewBox="0 0 24 24 " stroke="currentColor " stroke-width="2 ">
                                <path stroke-linecap="round " stroke-linejoin="round " d="M5 13l4 4L19 7 " />
                            </svg>
                    </button>
                    </div>
                </div>

        </div>
    </div>
</div>

</BaseLayout>
